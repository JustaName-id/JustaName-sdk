{
  "name": "@justweb3/ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/@justweb3/ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/@justweb3/ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx buildProject @justweb3/ui"
          },
          {
            "command": "node update-package-json.js"
          }
        ],
        "cwd": "packages/@justweb3/ui",
        "parallel": false
      }
    },
    "buildProject": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/@justweb3/ui/dist",
        "tsConfig": "packages/@justweb3/ui/tsconfig.lib.json",
        "project": "packages/@justweb3/ui/package.json",
        "entryFile": "packages/@justweb3/ui/src/index.ts",
        "external": ["react", "react-dom", "react/jsx-runtime"],
        "generateExportsField": true,
        "compiler": "swc",
        "format": ["esm"],
        "assets": [
          {
            "glob": "packages/@justweb3/ui/README.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      },
      "dependsOn": ["lint"]
    },
    "transform:logo": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "rm -rf src/lib/icons/components/logo && mkdir src/lib/icons/components/logo && npx @svgr/cli --out-dir src/lib/icons/components/logo --config-file .svgrrc.js --index-template=src/template/index-template.js  -- src/lib/icons/svgs/logo "
      }
    },
    "transform:chains": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "rm -rf src/lib/icons/components/chains && mkdir src/lib/icons/components/chains && npx @svgr/cli --out-dir src/lib/icons/components/chains --config-file .svgrrc.js --index-template=src/template/index-chain-template.js  -- src/lib/icons/svgs/chains "
      }
    },
    "transform:general": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "rm -rf src/lib/icons/components/general && mkdir src/lib/icons/components/general && npx @svgr/cli --out-dir src/lib/icons/components/general --config-file .svgrrc.js --index-template=src/template/index-template.js  -- src/lib/icons/svgs/general "
      }
    },
    "transform:socials": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "rm -rf src/lib/icons/components/socials && mkdir src/lib/icons/components/socials && npx @svgr/cli --out-dir src/lib/icons/components/socials --config-file .svgrrc.js --index-template=src/template/index-template.js  -- src/lib/icons/svgs/socials "
      }
    },
    "transform:contentHash": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "rm -rf src/lib/icons/components/contentHash && mkdir src/lib/icons/components/contentHash && npx @svgr/cli --out-dir src/lib/icons/components/contentHash --config-file .svgrrc.js --index-template=src/template/index-template.js  -- src/lib/icons/svgs/contentHash "
      }
    },
    "transform:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run @justweb3/ui:transform:chains",
          "nx run @justweb3/ui:transform:general",
          "nx run @justweb3/ui:transform:socials",
          "nx run @justweb3/ui:transform:contentHash",
          "nx run @justweb3/ui:transform:logo"
        ]
      }
    },
    "missingChains": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "npx tsx src/scripts/missingChains.ts"
      }
    },
    "extraChains": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "npx tsx src/scripts/extraChains.ts"
      }
    },
    "removeExtraChains": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/@justweb3/ui",
        "command": "npx tsx src/scripts/removeExtraChains.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true,
        "lintFilePatterns": [
          "packages/@justweb3/ui/**/*.{ts,tsx,js,jsx}",
          "packages/@justweb3/ui/package.json"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @justweb3/ui {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "packages/@justweb3/ui/dist"
      },
      "dependsOn": ["^build", "build"]
    },
    "release:package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx semantic-release --debug --extends=./packages/@justweb3/ui/release.config.js"
      }
    },
    "update-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx rjp ./packages/@justweb3/ui/dist/package.json $PACKAGE_NAME $VERSION"
      }
    }
  }
}
