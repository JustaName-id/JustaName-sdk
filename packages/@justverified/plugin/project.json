{
  "name": "@justverified/plugin",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugins/@justverified/plugin/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4401,
        "configDir": "packages/plugins/@justverified/plugin/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx buildProject @justverified/plugin"
          },
          {
            "command": "node update-package-json.js"
          }
        ],
        "cwd": "packages/plugins/@justverified/plugin",
        "parallel": false
      }
    },
    "buildProject": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "packages/plugins/@justverified/plugin/dist",
        "tsConfig": "packages/plugins/@justverified/plugin/tsconfig.lib.json",
        "project": "packages/plugins/@justverified/plugin/package.json",
        "entryFile": "packages/plugins/@justverified/plugin/src/index.ts",
        "external": [
          "react",
          "react-dom",
          "react/jsx-runtime",
          "@justaname.id/react",
          "@justweb3/ui",
          "@justaname.id/sdk",
          "@justweb3/widget"
        ],
        "rollupConfig": "packages/plugins/@justverified/plugin/rollup.config.cjs",
        "generateExportsField": true,
        "compiler": "swc",
        "format": ["esm"],
        "assets": [
          {
            "glob": "packages/plugins/@justverified/plugin/README.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      },
      "dependsOn": [
        "lint",
        {
          "projects": [
            "@justaname.id/sdk",
            "@justaname.id/react",
            "@justweb3/ui",
            "@justweb3/widget"
          ],
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "fix": true,
        "lintFilePatterns": [
          "packages/plugins/@justverified/plugin/**/*.{ts,tsx,js,jsx}",
          "packages/plugins/@justverified/plugin/package.json"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @justverified/plugin {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "packages/plugins/@justverified/plugin/dist"
      },
      "dependsOn": ["^build", "build", "^@justaname.id/react:build"]
    },
    "release:package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx semantic-release --debug --extends=./packages/plugins/@justverified/plugin/release.config.js"
      }
    },
    "update-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx rjp ./packages/plugins/@justverified/plugin/dist/package.json $PACKAGE_NAME $VERSION"
      }
    }
  }
}
