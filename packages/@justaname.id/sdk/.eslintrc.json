{
  "extends": ["../../../.eslintrc.base.json"],
  "ignorePatterns": ["!src/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-empty-interface": "off",
        "no-func-assign": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredFiles": ["{projectRoot}/rollup.config.{js,ts,mjs,mts}"]
          }
        ]
      }
    }
  ]
}
